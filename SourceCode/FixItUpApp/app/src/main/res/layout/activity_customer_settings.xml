<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerSettingsActivity"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/new_login_gradients">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editTextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:hint="Enter your Name"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="84dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="30dp"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColorHint="#161616"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:layout_marginTop="70dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#1e1d1d" />

            <EditText
                android:id="@+id/editTextConatact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="Enter your contact number"
                android:inputType="phone"
                android:ems="12"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="30dp"
                android:textStyle="bold"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColorHint="#1b1a1a"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#161616" />

            <EditText
                android:id="@+id/editTextZip"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Zipcode"
                android:inputType="number"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="211dp"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColorHint="#161616"
                android:maxLines="1"
                android:background="@android:color/transparent"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#1a1919" />


            <Button
                android:id="@+id/detailButton"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="154dp"
                android:layout_height="68dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_login"
                android:clickable="true"
                android:padding="16dp"
                android:text="CONFIRM CHANGES"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#151414"
                android:textSize="15sp"
                android:textFontWeight="400"/>

            <Button
                android:id="@+id/back"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_login"
                android:clickable="true"
                android:padding="16dp"
                android:text="BACK"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#181717"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textFontWeight="400"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>